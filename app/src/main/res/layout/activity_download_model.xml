<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".util.DownloadModelActivity">

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Downloading Model"

       style="@style/TextViewHeaders"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/progressBar_ImageViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:gravity="center"

        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loading_text"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/progress_flag_1"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_margin="8dp"

            android:src="@drawable/france_flag_1"/>


        <ImageView
            android:id="@+id/progress_flag_2"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_margin="8dp"

            android:src="@drawable/france_flag_1"/>

        <ImageView
            android:id="@+id/progress_flag_3"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_margin="8dp"

            android:src="@drawable/france_flag_1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>